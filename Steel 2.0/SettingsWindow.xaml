<Window x:Class="Steel_2._0.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="270" Width="441" ResizeMode="NoResize" Icon="Steel_ICON.png">

			<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
				<TextBox Height="23" HorizontalAlignment="Left" Margin="100,36,0,0" Name="txtDir" VerticalAlignment="Top" Width="208" TabIndex="1" />
				<Label Content="Local directory" Height="28" HorizontalAlignment="Left" Margin="6,34,0,0" Name="lblDir" VerticalAlignment="Top" />
				<Button Content="Browse" Height="23" HorizontalAlignment="Left" Margin="314,35,0,0" Name="btnBrowse" VerticalAlignment="Top" Width="75" Click="btnBrowse_Click" TabIndex="2" />

				<TextBox Height="23" HorizontalAlignment="Left" Margin="100,69,0,0" Name="txtSteelServer" VerticalAlignment="Top" Width="295" TabIndex="3" />
				<Label Content="Steel server" Height="28" HorizontalAlignment="Left" Margin="6,67,0,0" Name="lblSteelServer" VerticalAlignment="Top" />
				<TextBox Height="23" HorizontalAlignment="Left" Margin="100,102,0,0" Name="txtLanServer" VerticalAlignment="Top" Width="295" TabIndex="4" />
				<Label Content="LAN server" Height="28" HorizontalAlignment="Left" Margin="6,100,0,0" Name="label1" VerticalAlignment="Top" />

				<TextBox Height="23" HorizontalAlignment="Left" Margin="100,135,0,0" Name="txtPort" VerticalAlignment="Top" Width="72" TabIndex="5" />
				<Label Content="Torrent port" Height="28" HorizontalAlignment="Left" Margin="6,133,0,0" Name="lblPort" VerticalAlignment="Top" />
		<Button Content="Save" Height="23" HorizontalAlignment="Left" Margin="12,196,0,0" Name="btnSave" VerticalAlignment="Top" Width="75" Click="btnSave_Click" IsDefault="True" TabIndex="6" />
		<Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="332,196,0,0" Name="btnCancel" VerticalAlignment="Top" Width="75" Click="btnCancel_Click" TabIndex="7" />
	</Grid>

	
</Window>
